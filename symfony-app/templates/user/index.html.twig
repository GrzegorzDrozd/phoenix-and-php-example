{% extends 'base.html.twig' %}

{% block page_title %}User List{% endblock %}

{% block page_header_title %}User List{% endblock %}

{% block page_actions %}
    <a href="{{ path('app_user_new') }}" class="btn btn-primary">
        <!-- Download SVG icon from http://tabler-icons.io/i/plus -->
        <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><line x1="12" y1="5" x2="12" y2="19" /><line x1="5" y1="12" x2="19" y2="12" /></svg>
        New User
    </a>
{% endblock %}

{% block content %}
    <div class="card">
        <div class="card-body">
            <h3 class="card-title">Search & Filter</h3>
            <form action="{{ path('app_user_index') }}" method="get" class="row g-3" data-controller="air-datepicker">
                <div class="col-md-4">
                    <label for="search" class="form-label">Search</label>
                    <input type="text" class="form-control" id="search" name="search" value="{{ search }}">
                </div>
                <div class="col-md-3">
                    <label for="birthdate_from" class="form-label">Birthdate From</label>
                    <input type="text" class="form-control" id="birthdate_from" name="birthdate_from" value="{{ birthdateFrom }}" placeholder="YYYY-MM-DD" data-air-datepicker-target="datepickerInput">
                </div>
                <div class="col-md-3">
                    <label for="birthdate_to" class="form-label">Birthdate To</label>
                    <input type="text" class="form-control" id="birthdate_to" name="birthdate_to" value="{{ birthdateTo }}" placeholder="YYYY-MM-DD" data-air-datepicker-target="datepickerInput">
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary mt-4">Apply Filters</button>
                </div>
            </form>
        </div>
    </div>

    <div class="card mt-3">
        <div class="table-responsive">
            <table class="table card-table table-vcenter text-nowrap datatable">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>
                            <a href="{{ path('app_user_index', app.request.query.all|merge({ 'sort_by': 'first_name', 'sort_order': (sortBy == 'first_name' and sortOrder == 'asc') ? 'desc' : 'asc' })) }}">
                                First Name
                                {% if sortBy == 'first_name' %}
                                    {% if sortOrder == 'asc' %}
                                        <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-caret-up-filled" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M18 14l-6 -6l-6 6h12z" stroke-width="0" fill="currentColor" /></svg>
                                    {% else %}
                                        <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-caret-down-filled" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M18 10l-6 6l-6 -6h12z" stroke-width="0" fill="currentColor" /></svg>
                                    {% endif %}
                                {% endif %}
                            </a>
                        </th>
                        <th>
                            <a href="{{ path('app_user_index', app.request.query.all|merge({ 'sort_by': 'last_name', 'sort_order': (sortBy == 'last_name' and sortOrder == 'asc') ? 'desc' : 'asc' })) }}">
                                Last Name
                                {% if sortBy == 'last_name' %}
                                    {% if sortOrder == 'asc' %}
                                        <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-caret-up-filled" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M18 14l-6 -6l-6 6h12z" stroke-width="0" fill="currentColor" /></svg>
                                    {% else %}
                                        <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-caret-down-filled" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M18 10l-6 6l-6 -6h12z" stroke-width="0" fill="currentColor" /></svg>
                                    {% endif %}
                                {% endif %}
                            </a>
                        </th>
                        <th>
                            <a href="{{ path('app_user_index', app.request.query.all|merge({ 'sort_by': 'birthdate', 'sort_order': (sortBy == 'birthdate' and sortOrder == 'asc') ? 'desc' : 'asc' })) }}">
                                Birthdate
                                {% if sortBy == 'birthdate' %}
                                    {% if sortOrder == 'asc' %}
                                        <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-caret-up-filled" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M18 14l-6 -6l-6 6h12z" stroke-width="0" fill="currentColor" /></svg>
                                    {% else %}
                                        <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-caret-down-filled" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M18 10l-6 6l-6 -6h12z" stroke-width="0" fill="currentColor" /></svg>
                                    {% endif %}
                                {% endif %}
                            </a>
                        </th>
                        <th>
                            <a href="{{ path('app_user_index', app.request.query.all|merge({ 'sort_by': 'gender', 'sort_order': (sortBy == 'gender' and sortOrder == 'asc') ? 'desc' : 'asc' })) }}">
                                Gender
                                {% if sortBy == 'gender' %}
                                    {% if sortOrder == 'asc' %}
                                        <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-caret-up-filled" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M18 14l-6 -6l-6 6h12z" stroke-width="0" fill="currentColor" /></svg>
                                    {% else %}
                                        <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-caret-down-filled" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M18 10l-6 6l-6 -6h12z" stroke-width="0" fill="currentColor" /></svg>
                                    {% endif %}
                                {% endif %}
                            </a>
                        </th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for user in users %}
                        <tr>
                            <td>{{ user.id }}</td>
                            <td>{{ user.firstName }}</td>
                            <td>{{ user.lastName }}</td>
                            <td>{{ user.birthdate|date('Y-m-d') }}</td>
                            <td>{{ user.gender|capitalize }}</td>
                            <td>
                                <a href="{{ path('app_user_show', {'id': user.id}) }}" class="btn btn-sm btn-info">View</a>
                                <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-sm btn-warning">Edit</a>
                                <form method="post" action="{{ path('app_user_delete', {'id': user.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');" style="display: inline-block;">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                                    <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                                </form>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="6" class="text-center">No users found</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
        {# Pagination #}
        {% if usersListResponse.totalCount is not null and usersListResponse.totalCount > 0 %}
            {% set pageSize = 25 %} {# API pagination size #}
            <div class="card-footer d-flex align-items-center">
                <p class="m-0 text-muted">Showing {{ (usersListResponse.currentPage * pageSize) + 1 }} to {{ ((usersListResponse.currentPage + 1) * pageSize) > usersListResponse.totalCount ? usersListResponse.totalCount : (usersListResponse.currentPage + 1) * pageSize }} of {{ usersListResponse.totalCount }} entries</p>
                <ul class="pagination m-0 ms-auto">
                    <li class="page-item {% if usersListResponse.currentPage == 0 %}disabled{% endif %}">
                        <a class="page-link" href="{{ path('app_user_index', app.request.query.all|merge({'page': usersListResponse.currentPage - 1})) }}" tabindex="-1" aria-disabled="true">
                            <!-- Download SVG icon from http://tabler-icons.io/i/chevron-left -->
                            <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><polyline points="15 6 9 12 15 18" /></svg>
                            prev
                        </a>
                    </li>
                    {# Advanced pagination logic #}
                    {% set totalPages = (usersListResponse.totalCount / pageSize)|round(0, 'ceil') %}
                    {% set currentPage = usersListResponse.currentPage %}

                    {% set pagesToShow = [] %}
                    {% set maxPagesToShow = 7 %} {# e.g., 1 ... 4 5 6 ... 10 #}

                    {# Always add the first page #}
                    {% if totalPages > 0 %}
                        {% set pagesToShow = pagesToShow|merge([0]) %}
                    {% endif %}

                    {% set startRange = max(0, currentPage - ((maxPagesToShow - 1) / 2)|round(0, 'floor')) %}
                    {% set endRange = min(totalPages - 1, currentPage + ((maxPagesToShow - 1) / 2)|round(0, 'floor')) %}

                    {% if startRange > 1 %}
                        {# Add an ellipsis if there's a gap after the first page #}
                        {% set pagesToShow = pagesToShow|merge(['...']) %}
                    {% endif %}

                    {% for i in startRange..endRange %}
                        {% if i != 0 and i != totalPages - 1 %} {# Avoid duplicating first and last pages if they fall in the range #}
                            {% set pagesToShow = pagesToShow|merge([i]) %}
                        {% endif %}
                    {% endfor %}

                    {% if endRange < totalPages - 2 %}
                        {# Add an ellipsis if there's a gap before the last page #}
                        {% set pagesToShow = pagesToShow|merge(['...']) %}
                    {% endif %}

                    {# Always add the last page (if not already covered and more than one page) #}
                    {% if totalPages > 1 and totalPages - 1 not in pagesToShow %}
                        {% set pagesToShow = pagesToShow|merge([totalPages - 1]) %}
                    {% endif %}


                    {% for pageItem in pagesToShow %}
                        {% if pageItem == '...' %}
                            <li class="page-item disabled">
                                <span class="page-link">...</span>
                            </li>
                        {% else %}
                            <li class="page-item {% if currentPage == pageItem %}active{% endif %}">
                                <a class="page-link" href="{{ path('app_user_index', app.request.query.all|merge({'page': pageItem})) }}">{{ pageItem + 1 }}</a>
                            </li>
                        {% endif %}
                    {% endfor %}
                    <li class="page-item {% if (usersListResponse.currentPage + 1) * pageSize >= usersListResponse.totalCount %}disabled{% endif %}">
                        <a class="page-link" href="{{ path('app_user_index', app.request.query.all|merge({'page': usersListResponse.currentPage + 1})) }}">
                            next <!-- Download SVG icon from http://tabler-icons.io/i/chevron-right -->
                            <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><polyline points="9 6 15 12 9 18" /></svg>
                        </a>
                    </li>
                </ul>
            </div>
        {% endif %}
    </div>
{% endblock %}
